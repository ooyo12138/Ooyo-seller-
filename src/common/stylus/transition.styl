//遮罩的过渡动画
.mask-leave-active{
  transition: .8s all !important;
}
.mask-leave-to{
  opacity: 0 !important;
}

.mask-enter{
  opacity: 0 !important;
}
.mask-enter-active{
  transition: .8s all !important;
}
.mask-enter-to{
  opacity: 1 !important;
}



//购物车删减按钮的过渡动画
.remove-leave-active{
  transition: .3s all !important;
}
.remove-leave-to{
  opacity: 0 !important;
  transform translate3d(24px,0,0) rotate(0deg)!important;
}

.remove-enter{
  opacity: 0 !important;
  transform translate3d(48px,0,0) rotate(0deg)!important;
}
.remove-enter-active{
  transition: .3s all !important;
}
.remove-enter-to{
  opacity: 1 !important;
  transform translate3d(0,0,0) rotate(-720deg)!important;
}
